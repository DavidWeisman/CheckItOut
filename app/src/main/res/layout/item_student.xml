<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical"
    android:background="@color/neutral_light">

    <!-- Call Button -->
    <ImageButton
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_call"
        android:contentDescription="Call student"
        app:tint="@color/primary_dark" />

    <!-- Student Name -->
    <TextView
        android:id="@+id/studentNameTextView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Student Name"
        android:textSize="16sp"
        android:textColor="@color/primary_dark"/>

    <!-- Attendance Checkbox -->
    <CheckBox
        android:id="@+id/attendanceCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="Attendance checkbox"
        android:buttonTint="@color/primary"/>

    <!-- OTP Checkbox with label -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/otpSuccessCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:buttonTint="@color/success_green"
            android:contentDescription="OTP success checkbox" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP"
            android:textColor="@color/success_green"
            android:textSize="14sp"
            android:paddingStart="4dp" />
    </LinearLayout>

</LinearLayout>
